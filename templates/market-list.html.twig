{% extends 'base.html.twig' %}
{% block body %}
<div class="container text-center">
    <div class="row">
        {% for market in marketList %}
            <div class="col-md-4 mb-2">
                <div class="card" style="width: 100%;">
                    <img src={{market.imgUrl}} class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ market.name }}</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Indirizzo: {{ market.address }}</li>
                        <li class="list-group-item">Tipologia: {{ market.type }}</li>
                    </ul>
                    <div class="card-body">
                        <a href="{{ path('products', {'id':market.id})}}" class="card-link">Entra</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}